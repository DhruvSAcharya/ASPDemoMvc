
@{
    ViewData["Title"] = "UpdateRequest";
}
@model ASPDemoMvc.Models.ServiceRequest; 
<h1>UpdateRequest</h1>

<div class="bg-light rounded p-2">
    <div class="mb-3">
        <h3>Service Request</h3>
    </div>
    <form method="post" asp-controller="Home" asp-action="UpdateData">
        <div class="row m-1 mb-2">
            <div class="col-2 d-flex justify-content-center align-items-center">
                <label asp-for="Id"> ID</label>
            </div>
            <div class="col">
                <p>@Model.Id</p>
                <input asp-for="Id" type="hidden" class="form-control" placeholder="Id">
            </div>
        </div>
        <div class="row m-1 mb-2">
            <div class="col-2 d-flex justify-content-center align-items-center">
                <label asp-for="fName"> First Name</label>
            </div>
            <div class="col">
                <input asp-for="fName" type="text" value="@Model.fName" class="form-control" placeholder="First name">
            </div>
            <div class="col-2 d-flex justify-content-center align-items-center">
                <label asp-for="lName">Last Name</label>
            </div>
            <div class="col">
                <input asp-for="lName" type="text" value="@Model.lName"  class="form-control" placeholder="Last name">
            </div>
        </div>
        <div class="row m-1 mb-2">
            <div class="col-2 d-flex justify-content-center align-items-center">
                <label asp-for="mobileNo"> Mobile No.</label>
            </div>
            <div class="col">
                <input asp-for="mobileNo" type="number" value="@Model.mobileNo" class="form-control" placeholder="Mobile Number">
            </div>
            <div class="col-2 d-flex justify-content-center align-items-center">
                <label asp-for="email">Email</label>
            </div>
            <div class="col">
                <input asp-for="email" type="email" value="@Model.email" class="form-control" placeholder="Email">
            </div>
        </div>
        <div class="row m-1 mb-2">
            <div class="col-2">
                <div class="d-flex justify-content-center align-items-center">
                    <label asp-for="enquiryPurpose">Enquiry Purpose </label>
                </div>
            </div>
            <div class="col-4">
                <select asp-for="enquiryPurpose" id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>Interview</option>
                    <option>Courier</option>
                </select>
            </div>
        </div>
        <div class="row m-1 mb-2">
            <div class="col-2">
                <div class="d-flex justify-content-center align-items-center">
                    <label asp-for="comments">Comments </label>
                </div>
            </div>
            <div class="col">
                <textarea asp-for="comments" class="form-control" >@Model.comments</textarea>
            </div>
        </div>
        <div class="row m-1">
            <div class="col-1">
                <input type="submit" class="btn btn-primary" value="Update">
            </div>
        </div>
    </form>
</div>